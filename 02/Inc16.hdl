/**
 * 16-bit incrementer:
 * out = in + 1 (arithmetic addition)
 */

CHIP Inc16 {
    IN in[16];
    OUT out[16];

    PARTS:
    FullAdder(a=in[0], b=true, c=false, sum=out[0], carry=car0);
    FullAdder(a=in[1], b=false, c=car0, sum=out[1], carry=car1);
    FullAdder(a=in[2], b=false, c=car1, sum=out[2], carry=car2);
    FullAdder(a=in[3], b=false, c=car2, sum=out[3], carry=car3);
    FullAdder(a=in[4], b=false, c=car3, sum=out[4], carry=car4);
    FullAdder(a=in[5], b=false, c=car4, sum=out[5], carry=car5);
    FullAdder(a=in[6], b=false, c=car5, sum=out[6], carry=car6);
    FullAdder(a=in[7], b=false, c=car6, sum=out[7], carry=car7);
    FullAdder(a=in[8], b=false, c=car7, sum=out[8], carry=car8);
    FullAdder(a=in[9], b=false, c=car8, sum=out[9], carry=car9);
    FullAdder(a=in[10], b=false, c=car9, sum=out[10], carry=car10);
    FullAdder(a=in[11], b=false, c=car10, sum=out[11], carry=car11);
    FullAdder(a=in[12], b=false, c=car11, sum=out[12], carry=car12);
    FullAdder(a=in[13], b=false, c=car12, sum=out[13], carry=car13);
    FullAdder(a=in[14], b=false, c=car13, sum=out[14], carry=car14);
    FullAdder(a=in[15], b=false, c=car14, sum=out[15], carry=car15);
}